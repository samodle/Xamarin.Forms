<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockQuotes.Page">
  <Grid Padding="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <ScrollView>
      <StackLayout >
        <Entry x:Name="quoteBox" Placeholder="Enter Stock Symbol">
          <!--   <Entry.Triggers>
            <Setter Property="Scale" Value ="1.3" />
          </Entry.Triggers> -->
        </Entry>
        <Button x:Name="goButton" Text="Pull Quote" />
      </StackLayout>
    </ScrollView>
    <Label x:Name="statusText" Grid.Row="1" HorizontalTextAlignment="Center" />
  </Grid>
</ContentPage>